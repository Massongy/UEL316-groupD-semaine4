{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="p-4 p-md-5">
                    {% if not app.user %}
                    <div class="text-center mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10"
                             style="width:64px;height:64px;">
                            <span class="fs-3">üîê</span>
                        </div>
                        <h1 class="h3 mt-3 mb-1 fw-bold">Connexion</h1>
                        <p class="text-muted mb-0">Acc√®de √† ton espace</p>
                    </div>
                    {% endif %}
                    
                    {% if error %}
                        <div class="alert alert-danger py-2">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-info py-2 d-flex justify-content-between align-items-center">
                            <span>Connect√© en tant que <strong>{{ app.user.userIdentifier }}</strong></span>
                            <a class="btn btn-sm btn-outline-dark" href="{{ logout_path() }}">Logout</a>
                        </div>
                    {% else %}
                        <form method="post" class="mt-3">
                            <div class="mb-3">
                                <label for="username" class="form-label fw-semibold">Email</label>
                                <input
                                    type="email"
                                    value="{{ last_username }}"
                                    name="_username"
                                    id="username"
                                    class="form-control form-control-lg rounded-3"
                                    autocomplete="email"
                                    required
                                    autofocus
                                    placeholder="ex: nathan@mail.com"
                                >
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label fw-semibold">Mot de passe</label>
                                <input
                                    type="password"
                                    name="_password"
                                    id="password"
                                    class="form-control form-control-lg rounded-3"
                                    autocomplete="current-password"
                                    required
                                    placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                                >
                            </div>

                            <input
                                type="hidden"
                                name="_csrf_token"
                                data-controller="csrf-protection"
                                value="{{ csrf_token('authenticate') }}"
                            >

                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
                                    <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
                                </div>
                            </div>

                            <button class="btn btn-primary btn-lg w-100 rounded-3 fw-semibold" type="submit">
                                Se connecter
                            </button>

                            <div class="text-center mt-4">
                                <span class="text-muted">Pas de compte ?</span>
                                <a href="{{ path('app_register') }}" class="text-decoration-none fw-semibold">Cr√©er un compte</a>
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
